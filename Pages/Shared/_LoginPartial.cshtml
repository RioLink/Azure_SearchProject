@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<div class="auth-links">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-page="/Images/Upload" class="nav-link upload">Upload</a>

        <form asp-area="Identity"
              asp-page="/Account/Logout"
              method="post"
              class="logout-form">
            <button type="submit" class="nav-link logout">Logout</button>
        </form>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a>
    }
</div>
